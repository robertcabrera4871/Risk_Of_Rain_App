<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#80E1DFDF"
    android:onClick="toRunScreen"
    android:orientation="horizontal">>

    <ImageView
        android:id="@+id/pastRunCharView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/commando" />

    <TextView
        android:id="@+id/pastRunText"
        android:layout_width="225dp"
        android:layout_height="match_parent"
        android:fontFamily="@font/riskofrainfont"
        android:gravity="center"
        android:text="Character: Commando  Date: 4/20/2020"
        android:textSize="14sp" />

</LinearLayout>